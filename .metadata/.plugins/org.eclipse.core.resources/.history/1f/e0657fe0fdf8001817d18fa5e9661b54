package application;

import javafx.fxml.FXML;
import javafx.scene.control.Button;
import javafx.scene.control.Label;
import javafx.scene.control.TextField;

public class SampleController {

	@FXML Button btnCal;
	@FXML Label lblMonthlyInstallments;
	@FXML Label lblResult;
	@FXML TextField  txtAmount;
	@FXML TextField  txtInterest;
	@FXML TextField  txtDuration;
	
	@FXML private void btnCalculate() {
		double result;
		double txt1am=Double.parseDouble(txtAmount.getText());
		double txt2am=Double.parseDouble(txtInterest.getText());
		double txt3am=Double.parseDouble(txtDuration.getText());
		
		result=(txt1am*txt2am*txt3am)/1200;
		
		lblResult.setText("The result is: "+result);
		
	}
}
